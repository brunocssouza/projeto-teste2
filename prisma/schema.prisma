generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id String @id @default(cuid())
  user_name String
  user_cpf Int @unique
  user_email String @unique

  Client Client[]   // (UM PRA MUITOS) USER PODE TER V√ÅRIOS CLIENTS
}

model Client {
  client_id String @id @default(cuid())
  user_id_fk String

  user User @relation(fields: [user_id_fk], references: [user_id])  // (MUITOS PARA UM) MUITOS CLIENTES PODEM APONTAR PARA UM USUARIO
}



